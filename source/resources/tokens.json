{
  "$schema": "tokens-schema.json",

  "quarks": [
    {
      "shard": "quark",
      "kind": "#DUAL",
      "required-ctx": "html.comment",
      "opens-ctx": "quark.flag",
      "ctx-persists": true,
      "ctx-clashes": true,
      "variables": {},
      "regex-open": "#QUARK ",
      "html-open": "<>",
      "html-replaces": "#AUTO",
      "regex-close": "-->",
      "html-close": "#AUTO",
      "ctx-collapses": 1
    }, {
      "shard": "quark.live",
      "kind": "#MONO",
      "required-ctx": "quark",
      "flags": {"live": true},
      "regex-open": "LIVE"
    },
    {
      "shard": "quark.export",
      "kind": "#FLAG",
      "required-ctx": "quark",
      "opens-ctx": "quark.export",
      "regex-open": "export"
    }, {
      "shard": "quark.export-path",
      "kind": "#MONO",
      "required-ctx": "quark.export",
      "opens-ctx": null,
      "flags": {"path": "#VALUE"},
      "regex-open": ".*"
    }
  ]
}
