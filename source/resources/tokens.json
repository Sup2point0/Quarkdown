{
  "$schema": "tokens-schema.json",

  "quarks": [
    {
      "shard": "quark.trigger",
      "kind": "#DUAL",
      "required-ctx": "html.comment",
      "required-idx": null,
      "opens-ctx": "quark.flag",
      "ctx-persists": true,
      "ctx-clashes": true,
      "variables": {},
      "regex-open": "#QUARK ",
      "html-open": "<>",
      "html-replaces": "#AUTO",
      "regex-close": "-->",
      "html-close": "#AUTO"
    }
  ]
}
