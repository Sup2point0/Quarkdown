{
  "$schema": "tokens-schema.json",

  "tokens": [
    {
      "shard": "html.comment",
      "required-ctx": null,
      "opens-ctx": "html.comment",
      "ctx-persists": true,
      "ctx-clashes": true,
      "regex-open": "<!--",
      "regex-close": "-->"
    },

    {
      "shard": "quark",
      "required-ctx": "html.comment",
      "opens-ctx": "quark",
      "ctx-persists": true,
      "ctx-clashes": true,
      "regex-open": "#QUARK",
      "html-open": "<>",
      "regex-close": "-->",
      "ctx-collapses": 1
    },
    
    {
      "shard": "quark.live",
      "regex-open": "live!",
      "required-ctx": "quark",
      "flags": {"live": true}
    }, {
      "shard": "quark.dead",
      "regex-open": "dead!",
      "required-ctx": "quark",
      "flags": {"live": false}
    },

    {
      "shard": "shard.index",
      "regex-open": "index!",
      "required-ctx": "quark",
      "flags": {"index": true},
      "regex-close": null,
      "html-close": "#AUTO",
      "ctx-collapses": 0
    },

    {
      "shard": "quark.export-trigger",
      "required-ctx": "quark",
      "opens-ctx": "quark.export",
      "ctx-persists": false,
      "regex-open": "EXPORT:"
    }, {
      "shard": "quark.export-flag",
      "required-ctx": "quark.export",
      "flags": {"path": "#VALUE"},
      "regex-open": ".*",
      "ctx-collapses": 1
    },

    {
      "shard": "quark.style-trigger",
      "required-ctx": "quark",
      "opens-ctx": "quark.style",
      "ctx-persists": false,
      "flags": {"style": []},
      "regex-open": "STYLE:"
    }, {
      "shard": "quark.style-flag",
      "required-ctx": "quark.style",
      "flags": {"style": {"add": "#VALUE"}},
      "regex-open": ".*"
    },

    {
      "shard": "quark.duality-trigger",
      "required-ctx": "quark",
      "opens-ctx": "quark.duality",
      "ctx-persists": false,
      "regex-open": "DUALITY:"
    }, {
      "shard": "quark.duality-flag",
      "required-ctx": "quark.duality",
      "flags": {"duality": "#VALUE"},
      "regex-open": ".*",
      "ctx-collapses": 1
    },

    {
      "shard": "quark.index-trigger",
      "opens-ctx": "quark.index",
      "regex-open": "INDEX:",
      "required-ctx": "quark",
      "ctx-persists": false,
      "flags": {"index": []}
    }, {
      "shard": "quark.index-flag",
      "regex-open": ".*",
      "required-ctx": "quark.index",
      "flags": {"index": {"add": "#VALUE"}}
    },

    {
      "shard": "quark.date-trigger",
      "opens-ctx": "quark.date",
      "regex-open": "DATE:",
      "required-ctx": "quark",
      "ctx-persists": false,
      "flags": {"date": []}
    }, {
      "shard": "quark.date-year",
      "opens-ctx": "quark.date-year",
      "regex-open": ".*",
      "required-ctx": "quark.date",
      "ctx-persists": false,
      "flags": {"date": {"add": "#VALUE"}}
    }, {
      "shard": "quark.date-dec",
      "opens-ctx": "quark.date-dec",
      "regex-open": ".*",
      "required-ctx": "quark.date-year",
      "ctx-persists": false,
      "flags": {"date": {"add": "#VALUE"}}
    }, {
      "shard": "quark.date-day",
      "opens-ctx": "quark.date-day",
      "regex-open": ".*",
      "required-ctx": "quark.date-dec",
      "ctx-persists": false,
      "flags": {"date": {"add": "#VALUE"}}
    },

    {
      "shard": "code",
      "required-ctx": null,
      "opens-ctx": "code",
      "ctx-persists": true,
      "regex-open": "```",
      "regex-close": "#AUTO",
      "inhibits-quarkdown": true
    }
  ]
}
