{
  "$schema": "tokens-schema.json",

  "tokens": [
    {
      "shard": "html.comment",
      "kind": "#DUAL",
      "required-ctx": null,
      "opens-ctx": "html.comment",
      "ctx-clashes": true,
      "regex-open": "<!--",
      "regex-close": "-->"
    },
    {
      "shard": "quark",
      "kind": "#DUAL",
      "required-ctx": "html.comment",
      "opens-ctx": "quark",
      "ctx-clashes": true,
      "regex-open": "#QUARK",
      "html-open": "<>",
      "regex-close": "-->",
      "html-close": "#AUTO",
      "ctx-collapses": 1
    }, {
      "shard": "quark.live",
      "kind": "#MONO",
      "required-ctx": "quark",
      "flags": {"live": true},
      "regex-open": "LIVE"
    },
    {
      "shard": "quark.export-trigger",
      "kind": "#FLAG",
      "required-ctx": "quark",
      "opens-ctx": "quark.export",
      "regex-open": "EXPORT"
    }, {
      "shard": "quark.export-flag",
      "kind": "#MONO",
      "required-ctx": "quark.export",
      "flags": {"path": "#VALUE"},
      "regex-open": ".*",
      "ctx-collapses": 1
    }, {
      "shard": "quark.style-trigger",
      "kind": "#FLAG",
      "required-ctx": "quark",
      "opens-ctx": "quark.style",
      "regex-open": "STYLE"
    }, {
      "shard": "quark.style-flag",
      "kind": "#MONO",
      "required-ctx": "quark.style-trigger",
      "flags": {"style": "#VALUE"},
      "regex-open": ".*",
      "ctx-collapses": 1
    }, {
      "shard": "quark.polarity-trigger",
      "kind": "#FLAG",
      "required-ctx": "quark",
      "opens-ctx": "quark.polarity",
      "regex-open": "POLARITY"
    }, {
      "shard": "quark.polarity-flag",
      "kind": "#MONO",
      "required-ctx": "quark.polarity-trigger",
      "flags": {"polarity": "#VALUE"},
      "regex-open": ".*",
      "ctx-collapses": 1
    }
  ]
}
